{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "importHelpers": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
